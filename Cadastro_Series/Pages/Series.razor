@page "/Series"
@inject SerieRepositorio serieRepositorio;



<div class="container col-12 align-content-center">
    
    <div class="row">
        <div class="col">            
            <h3 class="text-center">Listas de Series</h3>                                                          
            <hr />
            <div class="d-flex justify-content-end">
                <btn @onclick="() => {Modal.Open(); escolherCategoria(2);}" class="btn btn-success">Adicionar</btn>
            </div>
            <table class="table table-hover align-middle table-bordered my-3">
              <thead>
                  <tr class="text-center">
                  <th class="col-1" scope="col">Id</th>
                  <th class="col-2"scope="col">Titulo</th>
                  <th class="col-1" scope="col">Ano</th>
                  <th class="col-1"scope="col">Genero</th>
                  <th class="col-4" scope="col">Descrição</th>
                  <th class="col-3"scope="col">Ações</th>
                </tr>
              </thead>
              <tbody>    

                @foreach(var serie in serieRepositorio.Listar())
                {
                    @if(serie.Excluido == false)
                    {                       
                        <tr class="text-center">
                            <th scope="row">@serie.Id</th>
                            <td>@serie.Titulo</td>
                            <td>@serie.Ano</td>  
                            <td>@serie.Genero.ToString()</td>  
                            <td>@serie.Descricao</td>
                            <td>                                
                                <BootstrapModal @ref="Modal" Serie="serie_selecionada" Categoria="categoria"
                                                             AddSerie="AddSerie" EditarSerie="EditarSerie">
                                    <ModalHead>
                                        <div class="text-center">
                                            <h5 ><b>@titulo</b></h5>
                                        </div>
                                        
                                    </ModalHead>
                                    <ModalBody>
                                        <FormComponent serie="serie_selecionada"/>                                                                             
                                    </ModalBody>

                                </BootstrapModal>

                                <button @onclick="() => {Modal.Open(); serie_selecionada = serie; escolherCategoria(1);}" class="btn btn-primary">Editar</button>
                                <button @onclick="() => excluirSerie(serie.Id)" class="btn btn-danger">Excluir</button>                                
                            </td>
                        </tr>    
                    }                    
                }                
              </tbody>
            </table>
        </div>
    </div>       
</div>




@code {
    private BootstrapModal Modal { get; set; }
    public Serie? serie_selecionada { get; set; }
    public int categoria { get; set; } = 0; //1 - editar - 2 criar
    public string? titulo { get; set; }

    public void escolherCategoria(int escolha)
    {
        if(escolha == 1)
        {
            titulo = "Editar";
        }
        else
        {
            titulo = "Criar";
            serie_selecionada = null;
        }
    }

    public void excluirSerie(int id)
    {
        serieRepositorio.Exclui(id);
        StateHasChanged();
    }

    public void EditarSerie(Serie serie)
    {
        serieRepositorio.Atualiza(serie.Id, serie);
    }

    public void AddSerie(Serie serie)
    {
        serieRepositorio.Insere(serie);
    }

}
